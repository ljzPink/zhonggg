<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhonggg.weixin.dao.XiaoChengXuDao">
<select id="getPoemList" parameterType="com.zhonggg.weixin.dto.PoemDTO" resultType="com.zhonggg.weixin.vo.PoemVO">
    SELECT  id ,title, dynasty,author,content,category FROM poem
    <where>
        <if test="title != null">
            title = #{title}
        </if>
        <if test="dynasty != null">
            dynasty = #{dynasty}
        </if>
        <if test="author != null">
            author = #{author}
        </if>
        <if test="content != null">
            content = #{content}
        </if>
        <if test="category != null">
            category = #{category}
        </if>

    </where>
</select>

</mapper>